#!/bin/bash

set -e


# Default values
POSITIONAL=()
BUILD=true
# extracting cmd line arguments
while [[ $# -gt 0 ]]
do
  key="$1"

  case $key in
      --no_build)
      BUILD=false
      shift # past argument
      ;;
      *)    # unknown option
      POSITIONAL+=("$1") # save it in an array for later
      shift # past argument
      ;;
  esac
done
set -- "${POSITIONAL[@]}" # restore positional parameters

if ! [ -f "tests/fixtures/python3.8-rasterio_1.1.8.zip" ]; then
    aws s3 cp s3://gfw-pipelines-dev/lambda_layers/python3.8-rasterio_1.1.8.zip tests/fixtures/python3.8-rasterio_1.1.8.zip
fi

if ! [ -f "tests/fixtures/python3.8-pillow_8.0.1.zip" ]; then
    aws s3 cp s3://gfw-pipelines-dev/lambda_layers/python3.8-pillow_8.0.1.zip tests/fixtures/python3.8-pillow_8.0.1.zip
fi

if [ "${BUILD}" = true ]; then
  docker-compose -f docker-compose.test.yml --project-name gfw-tile-cache_test build app
fi

set +e
docker-compose -f docker-compose.test.yml --project-name gfw-tile-cache_test run --rm app tests/"$*"
exit_code=$?
docker-compose -f docker-compose.test.yml --project-name gfw-tile-cache_test down --remove-orphans
rm tests/terraform/terraform.tfstate*
exit $exit_code